!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %title Portfolio
    = csrf_meta_tags
    = csp_meta_tag
    %meta{content: 'MsGMviSmnIXYhLTdfcWpeGPmxKnZ9vCwSWZR-sPlGJs', name: 'google-site-verification'}/
    %script{async: '', defer: 'defer', src: 'https://www.google.com/recaptcha/api.js?render=6LcI2XoUAAAAAFNVCA8l9Xs44pqX3OQVN8LK477j'
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBxUMjJ7VRpIWiy56Gyl7WcJNxRwlb8D2I'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.boxed
    - if notice
      .alert.alert-success.alert-dismissible{:role => "alert"}
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
          %span{'aria-hidden' => 'true'} ×
        %strong Success:
        = notice
    -if alert
      .alert.alert-danger.alert-dismissible{:role => "alert"}
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
          %span{'aria-hidden' => 'true'} ×
        %strong Success:
        = alert
    = render 'front/sections/header/header'
    = yield
